{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@prisma/*": ["./prisma/*"] // Example path mapping for Prisma
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
