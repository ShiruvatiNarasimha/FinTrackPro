{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist", // Ensure this is set correctly
    "rootDir": "./src", // Ensure this matches the structure of your project
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"], // Only compile files inside src/
  "exclude": ["node_modules", "dist"]
}
